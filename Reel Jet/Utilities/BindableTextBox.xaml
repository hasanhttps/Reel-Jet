<UserControl x:Class="Reel_Jet.Utilities.BindableTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Reel_Jet.Utilities"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox
            FontSize="12"
            Text="{Binding UsernameOrEmail,UpdateSourceTrigger=PropertyChanged}"
            FontWeight="Medium"
            CaretBrush="LightGray"
            BorderBrush="DarkGray"
            BorderThickness="0,0,0,2"
            VerticalContentAlignment="Center"
            Margin="0,5,0,0"
            materialDesign:HintAssist.Hint="Email"
            materialDesign:HintAssist.Foreground="White"
            materialDesign:HintAssist.FontFamily="/Static Files/Fonts/QuickSand/#Quicksand"
            materialDesign:TextFieldAssist.UnderlineBrush="Red"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
            VerticalAlignment="Center"/>
        
    </Grid>
</UserControl>
